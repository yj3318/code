/* 验证码图片区域 */
.verify-pic {
    display: block;
    margin: 0 auto;
    width: 600rpx;
    height: 177rpx;
    background: url(http://img63.ddimg.cn/upload_img/00774/11/xiaochengxujiaodiantu-1242-366-1603090299.jpg) center center no-repeat;
    background-size: 100%;
    overflow: hidden;
    position: relative;
}
.verify-pic .puzzle {
    display: block;
    position: absolute;
    background-color: #0000ff;
    z-index: 2;
}
.verify-pic .target-area {
    display: block;
    position: absolute;
    background-color: #00ff00;
    z-index: 1;
}
/* 滑动区域 */
.verify-content {
    margin: 0 auto;
    margin-top: 10rpx;
    width: 600rpx;
    height: 90rpx;
    background: #ededed;
    color: #666666;
    border-radius: 10px;
    display:flex;
    justify-content:center;
    align-items:center;
    font-size:16px;
}
.verify-box {
    width: 120rpx;
    height: 90rpx;
    background-color: #fc5b13;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.movable-icon {
    width: 60rpx;
    height: 60rpx;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100% 100%;
}
